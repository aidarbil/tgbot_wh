# Telegram bot token
BOT_TOKEN=1234567890:example

# Payments provider: telegram or yookassa
PAYMENTS_PROVIDER=yookassa

# Telegram Payments provider token from @BotFather (keep for legacy in-app payments)
PAYMENT_PROVIDER_TOKEN=381764678:TEST:MY_PROVIDER_TOKEN

# Database connection string (SQLite default)
DATABASE_URL=sqlite+aiosqlite:///./bot.db

# AI provider settings: gemini or chatgpt
AI_PROVIDER=gemini
FAL_API_KEY=your_fal_api_key
AI_API_KEY=your_ai_api_key

# Admin Telegram IDs separated by commas
ADMIN_IDS=123456789

# Support contact shown to users
SUPPORT_CONTACT=@username

# Number of free credits for new users
FREE_CREDITS=1

# Channel subscription required for welcome bonus (optional)
REQUIRED_CHANNEL=@hypetuning
REQUIRED_CHANNEL_LINK=https://t.me/hypetuning

# YooKassa credentials for external payments
YOOKASSA_SHOP_ID=123456
YOOKASSA_SECRET_KEY=live_secret_key
YOOKASSA_RETURN_URL=https://example.com/yookassa/return
YOOKASSA_WEBHOOK_SECRET=replace_me
YOOKASSA_SEND_RECEIPT=true
YOOKASSA_TAX_SYSTEM_CODE=2
YOOKASSA_RECEIPT_VAT_CODE=1
YOOKASSA_RECEIPT_EMAIL=receipts@example.com

# Host/port for local webhook server that handles YooKassa callbacks
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
